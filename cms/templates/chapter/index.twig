                                <a class="" href="{% if card.cardButtonInternalReference.one()|length %}{{ card.cardButtonInternalReference.one().url }}{% else %}{{ card.cardButtonExternalReference }}{% endif %}">
                                    <div class="bluebutton sm:text-sm lg:text-lg">
                                        {{ card.cardButtonText }}
                                    </div>
                                </a>
                            </button>
                        </div>
